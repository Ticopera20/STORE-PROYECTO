@model STORE_PROYECTO.Models.ProductoModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Información de Venta</title>
    <!-- Enlace a Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h1 class="mb-4">Información de Venta</h1>
        <div class="mt-3">
            <h2>Venta Exitosa</h2>
            <p>Producto: @Model.Producto</p>
            <p>Descripción: @Model.Descripcion</p>
            <p>Cantidad: @Model.Cantidad</p>
            <p>Precio Total: $@Model.PrecioTotal.ToString("C")</p>
        </div>
    </div>
</body>
</html>
